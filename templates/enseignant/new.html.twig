{% extends 'app/index.html.twig' %}

{% block title %}New User{% endblock %}

{% block content %}
    <div id="layoutSidenav_content">
                <main>
                    <div class="container-fluid">
                        <h1 class="mt-4">{% if app.user.role == "ROLE_AGENT" %} Chefs de départements  {% else %} Enseignants {% endif %}</h1>
                        <ol class="breadcrumb mb-4">
                            <li class="breadcrumb-item"><a href="{{ path('app') }}">Dashboard</a></li>
                            <li class="breadcrumb-item active">{% if app.user.role == "ROLE_AGENT" %} Chefs de départements  {% else %} Enseignants {% endif %}</li>
                        </ol>
                        
                        <div class="card mb-4">
                            <div class="card-header">
                                <i class="fas fa-table mr-1"></i>
                                Ajouter un {% if app.user.role == "ROLE_AGENT" %} Chef  {% else %} Enseignant {% endif %}
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                        {{ include('enseignant/_form.html.twig') }}
                                </div>
                            </div>
                        </div>
                    </div>
                </main>
                {% include 'app/footer.html.twig' %}
            </div>
{% endblock %}
