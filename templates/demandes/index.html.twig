{% extends 'app/index.html.twig' %}

{% block title %}Projets Fin Etudes{% endblock %}


            {% block content %}
            <div id="layoutSidenav_content">
                <main>
                    <div class="container-fluid">
                        <h1 class="mt-4">Demandes</h1>
                        <ol class="breadcrumb mb-4">
                            <li class="breadcrumb-item"><a href="{{ path('app') }}">Dashboard</a></li>
                            <li class="breadcrumb-item active">Demandes</li>
                        </ol>

                        <div class="card mb-4">
                            <div class="card-header">
                                <i class="fas fa-table mr-1"></i>
                                Liste de demandes
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                        <thead>
                                            <tr>
                                                <th>#</th>
                                                <th>Pfe</th>
                                                <th>Etudiant</th>
                                                <th>Binome</th>
                                                <!--<th>Actions</th>-->
                                            </tr>
                                        </thead>
                                       
                                        <tbody>
                                        {% for d in demandes %}
                                            <tr>
                                                <td>#{{ d.id }}</td>
                                                <td>{{ d.pfe.title }}</td>
                                                <td>{{ d.student.firstName }} {{ d.student.lastName }}</td>
                                                {% if d.binome %}
                                                     <td>{{ d.binome.firstName }} {{ d.binome.lastName }}</td>
                                                {% endif %}
                                                <td><a href="{{ path('accept_demand',{'id':d.id}) }}" class="btn btn-outline-success">Accepter</a></td>
                                                <!--<td><a href="{{ path('give_reason_refusal',{'id':d.id}) }}" class="btn btn-outline-danger">Refuser</a></td>-->
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </main>
                {% include 'app/footer.html.twig' %}
            </div>
            {% endblock %}
            {% block javascripts %}
            <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
            <script src="js/scripts.js"></script>
            <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js" crossorigin="anonymous"></script>
            <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js" crossorigin="anonymous"></script>
            <script src="{{ asset('assets/demo/datatables-demo.js') }}"></script>
            {% endblock %}
