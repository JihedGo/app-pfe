{% extends 'app/index.html.twig' %}

{% block title %}Encadrements{% endblock %}


            {% block content %}
            <div id="layoutSidenav_content">
                <main>
                    <div class="container-fluid">
                        <h1 class="mt-4">Encadrements</h1>
                        <ol class="breadcrumb mb-4">
                            <li class="breadcrumb-item"><a href="{{ path('app') }}">Dashboard</a></li>
                            <li class="breadcrumb-item active">Encadrements</li>
                        </ol>
                        
                        <div class="card mb-4">
                            <div class="card-header">
                                <i class="fas fa-table mr-1"></i>
                                Mes Encadrements
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                        <thead>
                                            <tr>
                                                <th>PFE</th>
                                                <th>Etudiant</th>
                                                <th>Salle</th>
                                                <th>Rapporteur</th>
                                                <th>Président</th>
                                                <!--<th>Actions</th>-->
                                            </tr>
                                        </thead>
                                        <tfoot>
                                            <tr>
                                                <th>PFE</th>
                                                <th>Etudiant</th>
                                                <th>Salle</th>
                                                <th>Rapporteur</th>
                                                <th>Président</th>
                                                <!--<th>Actions</th>-->
                                            </tr>
                                        </tfoot>
                                        <tbody>
                                        {% for p in encadrements %}
                                            <tr>
                                                <td>{{ p.pfe.title }}</td>
                                                <td>{{ p.student.firstName}} {{ p.student.lastName}}</td>
                                                <td>{% if p.pfe.salle is null %}<span class="badge badge-warning">en attente l'administration </span>  {% else %} <span class="badge badge-success">{{ p.pfe.salle.label }}</span>{% endif %}</td>
                                                <td>{% if p.pfe.reporter is null %}<span class="badge badge-warning">en attente l'administration </span>  {% else %} <span class="badge badge-success">{{ p.pfe.reporter.firstName }} {{ p.pfe.reporter.lastName }}</span>{% endif %}</td>
                                                <td>{% if p.pfe.president is null %}<span class="badge badge-warning">en attente l'administration </span>  {% else %} <span class="badge badge-success">{{ p.pfe.president.firstName }} {{ p.pfe.president.lastName }}</span>{% endif %}</td>
                                            </tr>
                                        {% endfor %} 
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </main>
                <footer class="py-4 bg-light mt-auto">
                    <div class="container-fluid">
                        <div class="d-flex align-items-center justify-content-between small">
                            <div class="text-muted">Copyright &copy; Your Website 2021</div>
                            <div>
                                <a href="#">Privacy Policy</a>
                                &middot;
                                <a href="#">Terms &amp; Conditions</a>
                            </div>
                        </div>
                    </div>
                </footer>
            </div>
            {% endblock %}
            {% block javascripts %}
            <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
            <script src="js/scripts.js"></script>
            <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js" crossorigin="anonymous"></script>
            <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js" crossorigin="anonymous"></script>
            <script src="{{ asset('assets/demo/datatables-demo.js') }}"></script>
            {% endblock %}
      