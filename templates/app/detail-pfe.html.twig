{% extends 'app/index.html.twig' %}

{% block title %}Liste PFEs{% endblock %}

{% block content %}
<div id="layoutSidenav_content">
                <main>
                    <div class="container-fluid">
                        <h1 class="mt-4">Liste des PFEs</h1>
                        <ol class="breadcrumb mb-4">
                            <li class="breadcrumb-item"><a href="{{ path('app') }}">Dashboard</a></li>
                            <li class="breadcrumb-item active">Offres PFEs</li>
                        </ol>
                        
                        <div class="card mb-4">
                            <div class="card-header">
                                <i class="fas fa-table mr-1"></i>
                                Liste de pfes
                            </div>
                            <div class="card-body">
                               <ul class"list-group">
                                    <li class="list-group-item">
                                        Titre Projet: <b>{{ postule.pfe.title }}</b></p>
                                    </li>
                                    <li class="list-group-item">
                                        Etudiant: <b>{{ postule.student.firstName | capitalize  }} {{ postule.student.lastName | capitalize }}</b></p>
                                    </li>
                                    <li class="list-group-item">
                                        Salle: <b>{{ postule.pfe.salle.label }}</p>
                                    </li>
                                    <h4>Membres du jury</h4>
                                    <ul class="list-group list-group-flush">
                                        <div class="container">
                                            <div class="row">
                                                <span class="col-1 buttons iconsize"><a class="btn-floating btn-lg stick stylish-color"><i class="fas fa-chalkboard-teacher"></i></a></span>
                                                <div class="list-group-item col-8">Pr√©sident:<small> {{ postule.pfe.president.firstName }} {{ postule.pfe.president.lastName }}</small></div>
                                            </div>
                                            <div class="row">
                                                <div class="col-1 buttons"><a class="btn-floating btn-lg orange"><i class="fas fa-umbrella-beach"></i></a></div>
                                                <div class="list-group-item col-8">Rapporteur:<small> {{ postule.pfe.reporter.firstName }} {{ postule.pfe.reporter.lastName }}</small></div>
                                            </div>
                                            <div class="row">
                                                <div class="col-1 buttons"><a class="btn-floating btn-lg green darken-2"><i class="far fa-image"></i></a></div>
                                                <div class="list-group-item col-8">Encadreur:<small> {{ postule.pfe.enseignant.firstName }} {{ postule.pfe.enseignant.lastName }}</small></div>
                                            </div>
                                            <div class="row">
                                                <div class="col-1 buttons"><a class="btn-floating btn-lg green darken-2"><i class="fas fa-calendar-alt"></i></a></div>
                                                <div class="list-group-item col-8">Date de soutenance:<small> {{ postule.pfe.dateSoutenance | date }}</small></div>
                                            </div>
                                        </div>
                                    </ul>
                                </ul>
                            </div>
                        </div>
                    </div>
                </main>
                {% include 'app/footer.html.twig' %}
            </div>
            {% endblock %}