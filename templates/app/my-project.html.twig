{% extends 'app/index.html.twig' %}

{% block title %}Projets Fin Etudes{% endblock %}


            {% block content %}
            <div id="layoutSidenav_content">
                <main>
                    <div class="container-fluid">
                        <h1 class="mt-4">PFE</h1>
                        <ol class="breadcrumb mb-4">
                            <li class="breadcrumb-item"><a href="{{ path('app') }}">Dashboard</a></li>
                            <li class="breadcrumb-item active">PFE</li>
                        </ol>
                        
                        <div class="card mb-4">
                            
                            <div class="card-header bg-success text-white text-center">
                                Mon Projet Fin Etude
                            </div>
                            <div class="card-body">
                            {% if not project %}
                                <div class="alert alert-info text-center">Vous n'etes pas affecté à un PFE</div>
                            {% else %}
                                
                               <ul class"list-group">
                                    <li class="list-group-item">
                                        Titre Projet: <b>{{ project.pfe.title }}</b></p>
                                    </li>
                                    {% if project.pfe.isConfirmedAdmin %}
                                    <li class="list-group-item">
                                        Salle: <b>{{ project.pfe.salle.label }}</p>
                                    </li>
                                    
                                    <h4>Membres du jury</h4>

                                    <ul class="list-group list-group-flush">
                                        <div class="container">
                                            <div class="row">
                                                <span class="col-1 buttons iconsize"><a class="btn-floating btn-lg stick stylish-color"><i class="fas fa-chalkboard-teacher"></i></a></span>
                                                <div class="list-group-item col-8">Président:<small> {{ project.pfe.president.firstName }} {{ project.pfe.president.lastName }}</small></div>
                                            </div>
                                            <div class="row">
                                                <div class="col-1 buttons"><a class="btn-floating btn-lg orange"><i class="fas fa-umbrella-beach"></i></a></div>
                                                <div class="list-group-item col-8">Rapporteur:<small> {{ project.pfe.reporter.firstName }} {{ project.pfe.reporter.lastName }}</small></div>
                                            </div>
                                            <div class="row">
                                                <div class="col-1 buttons"><a class="btn-floating btn-lg green darken-2"><i class="far fa-image"></i></a></div>
                                                <div class="list-group-item col-8">Encadreur:<small> {{ project.pfe.enseignant.firstName }} {{ project.pfe.enseignant.lastName }}</small></div>
                                            </div>
                                            <div class="row">
                                                <div class="col-1 buttons"><a class="btn-floating btn-lg green darken-2"><i class="fas fa-calendar-alt"></i></a></div>
                                                <div class="list-group-item col-8">Date de soutenance:<small> {{ project.pfe.dateSoutenance | date }}</small></div>
                                            </div>
                                        </div>
                                    </ul>
                                    {% endif %}
                                </ul>
                           
                            {% endif %}
                            </div>
                        </div>
                    </div>
                </main>
                {% include 'app/footer.html.twig' %}
            </div>
            {% endblock %}
      