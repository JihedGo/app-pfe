{% extends 'app/index.html.twig' %}

{% block title %}Department index{% endblock %}


            {% block content %}
            <div id="layoutSidenav_content">
                <main>
                    <div class="container-fluid">
                        <h1 class="mt-4">Salles</h1>
                        <ol class="breadcrumb mb-4">
                            <li class="breadcrumb-item"><a href="{{ path('app') }}">Dashboard</a></li>
                            <li class="breadcrumb-item active">Salles</li>
                        </ol>
                        
                        <div class="card mb-4">
                            <div class="card-header">
                                <i class="fas fa-table mr-1"></i>
                                Liste de salles
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <a href="{{ path('salle_new') }}" class="btn btn-primary"> + Ajouter Salle</a>
                                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                        <thead>
                                            <tr>
                                                <th>#</th>
                                                <th>Salle</th>
                                                <th>Disponible</th>
                                                <!--<th>Actions</th>-->
                                            </tr>
                                        </thead>
                                        <tfoot>
                                            <tr>
                                                <th>#</th>
                                                <th>Salle</th>
                                                <th>Disponible</th>
                                                <!--<th>Actions</th>-->
                                            </tr>
                                        </tfoot>
                                        <tbody>
                                        {% for salle in salles %}
                                            <tr>
                                                <td>#{{ salle.id }}</td>
                                                <td>{{ salle.label }}</td>
                                                <td>{% if salle.isDispo %}oui{% else %}non{% endif %}</td>
                                            </tr>
                                        {% endfor %} 
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </main>
                {% include 'app/footer.html.twig' %}
            </div>
            {% endblock %}
            {% block javascripts %}
            <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
            <script src="js/scripts.js"></script>
            <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js" crossorigin="anonymous"></script>
            <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js" crossorigin="anonymous"></script>
            <script src="{{ asset('assets/demo/datatables-demo.js') }}"></script>
            {% endblock %}
      