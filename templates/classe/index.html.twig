{% extends 'app/index.html.twig' %}

{% block title %}Classe index{% endblock %}
{% block content %}
            <div id="layoutSidenav_content">
                <main>
                    <div class="container-fluid">
                        <h1 class="mt-4">Filières</h1>
                        <ol class="breadcrumb mb-4">
                            <li class="breadcrumb-item"><a href="{{ path('app') }}">Dashboard</a></li>
                            <li class="breadcrumb-item active">Filières</li>
                        </ol>

                        <div class="card mb-4">
                            <div class="card-header">
                                <i class="fas fa-table mr-1"></i>
                                Liste de Filières
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <a href="{{ path('classe_new') }}" class="btn btn-primary"> + Ajouter Filière</a>
                                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                        <thead>
                                            <tr>
                                                <th>#</th>
                                                <th>Departement</th>
                                                <th>Filières</th>
                                                <!--<th>Actions</th>-->
                                            </tr>
                                        </thead>
                                        <tfoot>
                                            <tr>
                                                <th>#</th>
                                                <th>Departement</th>
                                                <th>Filière</th>
                                                <!--<th>Actions</th>-->
                                            </tr>
                                        </tfoot>
                                        <tbody>
                                        {% for dep in depts %}

                                            <tr>
                                                <td>#{{ dep.id }}</td>
                                                <td>#{{ dep.label }}</td>
                                                <td rows="3">
                                                    <table class="table table-hover">
                                                        <thead>
                                                            <tr>
                                                                <th>Filière</th>
                                                                <th>Niveau</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            {% if dep.classes %}
                                                                {% for cls in dep.classes  %}
                                                                    <tr>
                                                                        <td>{{ cls.label }}</td>
                                                                        <td>{{ cls.niveau }}</td>
                                                                    </tr>
                                                                {% endfor %}
                                                             {% else %}
                                                                <tr>
                                                                    <td>aucune classe trouvée</td>
                                                                </tr>
                                                             {% endif %}
                                                        </tbody>
                                                    </table>

                                                </td>
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </main>
                <footer class="py-4 bg-light mt-auto">
                    <div class="container-fluid">
                        <div class="d-flex align-items-center justify-content-between small">
                            <div class="text-muted">Copyright &copy; Your Website 2021</div>
                            <div>
                                <a href="#">Privacy Policy</a>
                                &middot;
                                <a href="#">Terms &amp; Conditions</a>
                            </div>
                        </div>
                    </div>
                </footer>
            </div>
            {% endblock %}
            {% block javascripts %}
            <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
            <script src="js/scripts.js"></script>
            <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js" crossorigin="anonymous"></script>
            <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js" crossorigin="anonymous"></script>
            <script src="{{ asset('assets/demo/datatables-demo.js') }}"></script>
            {% endblock %}
